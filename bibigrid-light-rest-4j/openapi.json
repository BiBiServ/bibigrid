{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Bibigrid",
    "description": "A REST-Api specification for bibigrid cluster management.",
    "license": {
      "name": "Dont know yet"
    }
  },
  "paths": {
    "/bibigrid/list": {
      "post": {
        "summary": "List all running clusters for a user",
        "operationId": "listRunningClusters",
        "requestBody": {
          "description": "YAML like configuration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Access"
              }
            }
          }
        },
        "tags": [
          "cluster"
        ],
        "responses": {
          "201": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClusterList"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/bibigrid/create": {
      "post": {
        "summary": "Create a bibigrid cluster for a user",
        "operationId": "createClusterByConfig",
        "requestBody": {
          "description": "YAML like configuration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ClusterConfiguration": {
                    "$ref": "#/components/schemas/ClusterConfiguration"
                  },
                  "Access": {
                    "$ref": "#/components/schemas/Access"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "cluster"
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/bibigrid/validate": {
      "post": {
        "summary": "Validate a cluster config",
        "operationId": "validateClusterConfig",
        "requestBody": {
          "description": "YAML like configuration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ClusterConfiguration": {
                    "$ref": "#/components/schemas/ClusterConfiguration"
                  },
                  "Access": {
                    "$ref": "#/components/schemas/Access"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "cluster"
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "is_valid": {
                      "type": "boolean"
                    },
                    "info": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "is_valid": false,
                    "info": "missing key"
                  }
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/bibigrid/info/{id}": {
      "post": {
        "summary": "Check the status of the cluster creation process",
        "operationId": "checkClusterCreationStatus",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The id of cluster to terminate",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "YAML like access object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Access"
              }
            }
          }
        },
        "tags": [
          "cluster"
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClusterStatus"
                },
                "example": {
                  "info": "Ich bin noch am hochfahren",
                  "log": "lorem ipsum lorem ipsum...."
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/bibigrid/terminate/{id}": {
      "post": {
        "summary": "End a cluster",
        "operationId": "terminateCluster",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The id of cluster to terminate",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "YAML like access object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Access"
              }
            }
          }
        },
        "tags": [
          "cluster"
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClusterStatus"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ClusterConfiguration": {
        "description": "See https://github.com/BiBiServ/bibigrid/blob/master/docs/README.md",
        "type": "object",
        "required": [
          "mode",
          "access",
          "subnet"
        ],
        "properties": {
          "mode": {
            "type": "string",
            "example": "openstack"
          },
          "subnet": {
            "type": "string",
            "example": "internalsub"
          },
          "masterInstance": {
            "type": "object",
            "required": [
              "type",
              "image"
            ],
            "properties": {
              "type": {
                "type": "string",
                "example": "de.NBI.small+ephemeral"
              },
              "image": {
                "type": "string",
                "example": "Ubuntu 16.04 LTS (2019-05-08)"
              }
            }
          },
          "slaveInstances": {
            "type": "object",
            "required": [
              "type",
              "image",
              "count"
            ],
            "properties": {
              "type": {
                "type": "string",
                "example": "de.NBI.small"
              },
              "image": {
                "type": "string",
                "example": "Ubuntu 16.04 LTS (2019-05-08)"
              },
              "count": {
                "type": "integer",
                "format": "int64",
                "example": 1
              }
            }
          },
          "masterMounts": {
            "type": "object",
            "required": [
              "source",
              "target"
            ],
            "properties": {
              "source": {
                "type": "string",
                "example": "a6042a6f-9232-4f26-948b-a487dd5e8cd8"
              },
              "target": {
                "type": "string",
                "example": "/vol/xxx"
              }
            }
          },
          "nfsShares": {
            "type": "string",
            "example": "/vol/xxx"
          },
          "theia": {
            "type": "string",
            "example": "yes"
          }
        }
      },
      "ClusterList": {
        "type": "object",
        "properties": {
          "clusters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "cluster": {
                  "type": "string",
                  "example": "Name + ID"
                },
                "runtime": {
                  "type": "string",
                  "example": "Timestamp"
                }
              }
            }
          }
        }
      },
      "ClusterStatus": {
        "type": "object",
        "properties": {
          "info": {
            "type": "string",
            "example": "Am Hochfahren"
          },
          "log": {
            "type": "string",
            "example": "Timestamp"
          }
        }
      },
      "Access": {
        "type": "object",
        "required": [
          "credentialsFile",
          "sshPrivateKeyFile",
          "sshPublicKeyFile",
          "sshUser",
          "keypair",
          "region",
          "availabilityZone"
        ],
        "properties": {
          "credentialsFile": {
            "type": "string",
            "example": "encoded bibiserv.yml"
          },
          "sshPrivateKeyFile": {
            "type": "string",
            "example": "encoded key"
          },
          "sshPublicKeyFile": {
            "type": "string",
            "example": "encoded key.pub"
          },
          "sshUser": {
            "type": "string",
            "example": "ubuntu"
          },
          "keypair": {
            "type": "string",
            "example": "mmustermann-key"
          },
          "region": {
            "type": "string",
            "example": "Bielefeld"
          },
          "availabilityZone": {
            "type": "string",
            "example": "default"
          }
        }
      }
    }
  }
}